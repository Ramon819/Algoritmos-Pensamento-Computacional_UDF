#include <stdio.h>
#include <stdlib.h>

int main() {
    float a, b;

    printf("Digite o primeiro número: ");
    scanf("%f", &a);

    printf("Digite o segundo número: ");
    scanf("%f", &b);

    if (a > b)
        printf("%.2f é maior que %.2f\n", a, b);
    else if (b > a)
        printf("%.2f é maior que %.2f\n", b, a);
    else
        printf("Os dois números são iguais.\n");

    system("pause");
    return 0;
}
